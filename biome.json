{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noBannedTypes": "off"
      },
      "style": {
        "recommended": true,
        "noArguments": "off",
        "noParameterAssign": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "files": {
    "ignore": ["node_modules", "coverage", "dist", ".vscode", "src/**/*.d.ts", "src/**/*.js"]
  }
}
