{
  "name": "@techmely/utils",
  "version": "3.3.0",
  "description": "Collection of helpful JavaScript / TypeScript utils",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "homepage": "https://about.techmely.com/libraries/utils",
  "bugs": {
    "url": "https://github.com/techmely/essential-packages/issues"
  },
  "repository": {
    "url": "git+https://github.com/techmely/essential-packages.git#main",
    "directory": "ts-package/utils"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "tag": "latest"
  },
  "scripts": {
    "lint.format": "bunx @biomejs/biome check --write .",
    "clean": "rm -f dist node_modules",
    "test.unit": "vitest --passWithNoTests",
    "test.unit.run": "NODE_ENV=test vitest run --passWithNoTests --isolate",
    "test.unit.coverage": "vitest --coverage",
    "build": "cross-env NODE_ENV=production bun run ./build.ts",
    "release": "bun run ./release.ts",
    "prepare": "husky"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./id": {
      "import": {
        "types": "./dist/id.d.ts",
        "default": "./dist/id.js"
      }
    },
    "./copyDir": {
      "import": {
        "types": "./dist/copyDir.d.ts",
        "default": "./dist/copyDir.js"
      }
    },
    "./emptyDir": {
      "import": {
        "types": "./dist/emptyDir.d.ts",
        "default": "./dist/emptyDir.js"
      }
    },
    "./findNearestFile": {
      "import": {
        "types": "./dist/findNearestFile.d.ts",
        "default": "./dist/findNearestFile.js"
      }
    },
    "./getDataPath": {
      "import": {
        "types": "./dist/getDataPath.d.ts",
        "default": "./dist/getDataPath.js"
      }
    },
    "./isFileReadable": {
      "import": {
        "types": "./dist/isFileReadable.d.ts",
        "default": "./dist/isFileReadable.js"
      }
    },
    "./isStream": {
      "import": {
        "types": "./dist/isStream.d.ts",
        "default": "./dist/isStream.js"
      }
    },
    "./mergeStreams": {
      "import": {
        "types": "./dist/mergeStreams.d.ts",
        "default": "./dist/mergeStreams.js"
      }
    },
    "./readFile": {
      "import": {
        "types": "./dist/readFile.d.ts",
        "default": "./dist/readFile.js"
      }
    },
    "./getAppVersion": {
      "import": {
        "types": "./dist/getAppVersion.d.ts",
        "default": "./dist/getAppVersion.js"
      }
    },
    "./getCurrentGitBranch": {
      "import": {
        "types": "./dist/getCurrentGitBranch.d.ts",
        "default": "./dist/getCurrentGitBranch.js"
      }
    },
    "./getGitLastCommitHash": {
      "import": {
        "types": "./dist/getGitLastCommitHash.d.ts",
        "default": "./dist/getGitLastCommitHash.js"
      }
    },
    "./getGitTags": {
      "import": {
        "types": "./dist/getGitTags.d.ts",
        "default": "./dist/getGitTags.js"
      }
    },
    "./getLastGitTags": {
      "import": {
        "types": "./dist/getLastGitTags.d.ts",
        "default": "./dist/getLastGitTags.js"
      }
    },
    "./writeFile": {
      "import": {
        "types": "./dist/writeFile.d.ts",
        "default": "./dist/writeFile.js"
      }
    }
  },
  "peerDependencies": {
    "dayjs": "^1.11.11",
    "base-x": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "dayjs": {
      "optional": true
    },
    "base-x": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@techmely/types": "1.9.0",
    "@testing-library/jest-dom": "6.4.6",
    "@types/bun": "1.1.6",
    "@types/node": "20.14.10",
    "cross-env": "7.0.3",
    "happy-dom": "14.12.3",
    "husky": "9.0.11",
    "npm-check-updates": "16.14.20",
    "base-x": "^5.0.0",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.11",
    "execa": "^9.3.0",
    "nanoid": "^5.0.7",
    "time-span": "5.1.0",
    "tslib": "^2.6.3",
    "typescript": "5.5.3",
    "vite": "^5.3.3",
    "vitest": "2.0.2",
    "zx": "8.1.4"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ],
  "keywords": ["techmely", "techmely-utils"]
}
